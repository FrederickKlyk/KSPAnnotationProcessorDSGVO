root = true

[*]
indent_style = space
max_line_length = 150
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.{kt,kts}]
ij_kotlin_allow_trailing_comma_on_call_site = true
insert_final_newline = true
ij_kotlin_allow_trailing_comma = true
ktlint_function_naming_ignore_when_annotated_with = Composable
ktlint_standard = disabled
ktlint_function_signature_rule_force_multiline_when_parameter_count_greater_or_equal_than = 3
ktlint_standard_string-template-indent = disabled
ktlint_standard_indent = disabled # can clash with android studio
ktlint_standard_annotation = disabled # w체rde einen Umbruch vor jede @Inject Annotation forcen
ktlint_standard_no-blank-line-in-list = disabled #removes all empty lines in every data entity constructor we use
ktlint_standard_parameter-list-wrapping = enabled #force umbruch auch wenn es nur ein Parameter in einer Function ist
ktlint_standard_max-line-length = enabled #
ktlint_standard_no-wildcard-imports = enabled # should be active (see settings in android studio)
ktlint_standard_no-empty-first-line-in-class-body = disabled
ktlint_standard_no-empty-first-line-in-class-body = disabled # wollen wir nicht aus Stilgr체nden.
ktlint_standard_multiline-expression-wrapping = disabled
ktlint_standard_function-signature = disabled # bricht expression functions um
ktlint_standard_package-name = disabled # wird sp채ter angemacht! Zurzeit haben wir noch _ in fast jedem package
ktlint_standard_if-else-wrapping = enabled
ktlint_standard_multiline-if-else = enabled # keep enabled
ktlint_standard_comma-spacing = enabled
ktlint_standard_dot-spacing = enabled
ktlint_standard_modifier-list-spacing = enabled
ktlint_standard_spacing-between-declarations-with-annotations = enabled
ktlint_standard_spacing-between-declarations-with-comments = enabled
ktlint_standard_spacing-around-angle-brackets = enabled
ktlint_standard_annotation-spacing = enabled
ktlint_standard_paren-spacing = enabled
ktlint_standard_op-spacing = enabled
ktlint_standard_no-semi = enabled
ktlint_standard_function-return-type-spacing = disabled
ktlint_standard_no-multi-spaces = enabled
ktlint_standard_no-consecutive-blank-lines = enabled
ktlint_standard_parameter-list-spacing = enabled
ktlint_standard_no-unused-imports = enabled
ktlint_standard_blank-line-before-declaration = enabled # leerzeilen vor jeder methodendefinition -- gut, da diese eh documentiert sein sollten
ktlint_standard_no-blank-line-before-rbrace = enabled
ktlint_standard_curly_spacing = enabled
#ktlint_standard_trailing-comma-on-call-site = enabled  # needs wrapping rule active
#ktlint_standard_colon-spacing = enabled # scheint durch den standard formatter ebenfalls enforced zu werden (space vor :)
ktlint_standard_property-naming = enabled # wir nutzen h채ufiger Namen die mit _ starten
ktlint_standard_function-start-of-body-spacing = enabled
ktlint_standard_no-empty-first-line-in-method-block = enabled
ktlint_standard_string-template = enabled
ktlint_standard_no-consecutive-comments = enabled
ktlint_standard_enum-wrapping = enabled
ktlint_standard_unnecessary-parentheses-before-trailing-lambda = enabled
ktlint_standard_statement-wrapping = enabled
ktlint_standard_discouraged-comment-location = enabled #required by if-else-wrapping